@model ProyectoCrud.Models.Contact
@{
    ViewData["Title"] = "Detalle de contacto";
}

<div class="text-center">
    <h1 class="display-4">Contacto</h1>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Usuarios</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>Nombre:</strong> @Html.DisplayFor(m => m.Name)
                    </li>
                    <li class="list-group-item">
						<strong>Teléfono:</strong> @Html.DisplayFor(m => m.Phone)
                        </li>
					<li class="list-group-item">
                        <strong>Celular:</strong> @Html.DisplayFor(m => m.Celular)
                    </li>
                    <li class="list-group-item">
						<strong>Email:</strong> @Html.DisplayFor(m => m.Email)
                        </li>
					<li class="list-group-item">
						<strong>Fecha de creación:</strong> @Html.DisplayFor(m => m.CreatedAt)
					</li>
                </ul>
                <div class="form-group mt-3">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>